<div class="comment">
	{{~#if tags}}
		<table>
			{{#each tags}}
				<tr>
					<th>{{tag}}</th>
					<td><code>{{type}}</code></td>
					<td><code>{{name}}</code></td>
					<td>{{{description}}}</td>
				</tr>
			{{/each}}
		</table>
	{{/if~}}

	{{~#if description}}
		{{{description}}}
	{{/if~}}
</div>
